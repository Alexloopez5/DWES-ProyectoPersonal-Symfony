{% extends "base.html.twig" %}
{% block title %}Productos{% endblock %}
{% block body %}
    <h1>Ficha del producto</h1>
    {% if productos %}
        {% for producto in productos %}
            {{ include ("partials/datos_producto.html.twig", {'producto': producto}) }}
        {% endfor %}
        <p>El precio total de los productos es de: {{ precioTotal }}
    {% else %}
        <p>No se han encontrado productos {{texto}}</p>
    {% endif %}
{% endblock %}