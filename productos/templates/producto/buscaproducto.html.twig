{% extends "base.html.twig" %}
{% block title %}Productos{% endblock %}
{% block body %}
    {% if totalproductos > 1 %}
        <h1>Fichas de los productos</h1>
    {% else %}
        <h1>Ficha del producto</h1>
    {% endif %}
        
    
    
    {% if productos %}
        {% for producto in productos %}
            {{ include ("partials/datos_producto.html.twig", {'producto': producto}) }}
        {% endfor %}
        <p>El precio total de los {{ totalproductos }} productos es de: {{ precioTotal }}
    {% else %}
        <p>No se han encontrado productos {{texto}}</p>
    {% endif %}
{% endblock %}